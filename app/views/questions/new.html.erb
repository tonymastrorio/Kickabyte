<div class="page-container">
    <p id="notice"><%= notice %></p>

    <% if @question.errors.any? %>
        <ul>
            <% @question.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
        </ul>
    <% end %>

    <%= form_for(@question) do |f| %>
        <%= f.label :title %>
        <%= f.text_field :title, :class => "new-question-title", :placeholder => "What's your programming/technology question?" %><br><br>
        <%= f.label :url, "Screencast URL" %>
        <%= f.text_field :url, :class => "url-input", :placeholder => "Any YouTube or Loom URL" %><br><br>
        <%= f.text_area :body, :class => "tinymce" %>

    <%= tinymce %>
    <br>
    <%= f.submit "Post Your Question", :class => "submit-btn" %>
    <% end %>
</div>

