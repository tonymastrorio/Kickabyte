//for questions/index page
var $downvotediv = $('div.vote-container[data-id="<%= @question.id %>"]');

<% if current_user.disliked? @question %>
    $downvotediv.find('.dislike-btn').addClass('liked');   
<% else %>
    $downvotediv.find('.dislike-btn').removeClass('liked');
<% end %>

<% if current_user.liked? @question %>
    $downvotediv.find('.like-btn').addClass('liked');   
<% else %>
    $downvotediv.find('.like-btn').removeClass('liked');
<% end %>

var $questiondiv = $('div.vote-container[data-id="<%= @question.id %>"]');
$questiondiv.find('.num-upvotes').html("<%= @question.get_upvotes.size - @question.get_downvotes.size %>");

