<div class="solo-comment">
    <%= comment.body %> &mdash; <%= comment.user.displayName %> &mdash; <%= time_ago_in_words(comment.updated_at) %> ago
    <%= link_to "Reply", new_acomment_path(:parent_id => comment, :answer_id => comment.answer) %>
</div>

<% comment.replies.each do |reply| %>
    <div class="comment-box">
        <%= render :partial => "comment", locals: { comment: reply} %>
    </div>
<% end %>
