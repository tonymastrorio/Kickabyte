// for questions/index page
var $upvotediv = $('div.vote-container[data-id="<%= @question.id %>"]');

<% if current_user.liked? @question %>
    $upvotediv.find('.vote').addClass('liked');   
<% else %>
    $upvotediv.find('.vote').removeClass('liked');
<% end %>

var $questiondiv = $('div.vote-container[data-id="<%= @question.id %>"]');
$questiondiv.find('.num-upvotes').html("<%= @question.get_upvotes.size %>");

