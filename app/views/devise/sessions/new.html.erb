  <h3 class="login-signup-header">Questions. Answers. Screencasts.</h3>

  <div class="flash-container">
    <% if flash[:alert] && flash[:alert].include?("You need to sign in or sign up before continuing.") %>
      <% flash.now[:alert] = "You must be logged in to continue." %>
      <h4 class="flash-style"><%= flash.now[:alert] %></h4>
    <% elsif flash[:alert] %>
      <h4 class="flash-style"><%= flash.now[:alert] %></h4>
    <% end %>
  </div>

<div class="login-page">
  <div class="login-wrapper">

    <%= link_to user_google_oauth2_omniauth_authorize_path, class: "btn btn-social btn-google" do %>
       <span class="fa fa-google"></span> Sign in with Google
    <% end %>
    <%= link_to user_facebook_omniauth_authorize_path, class: "btn btn-social btn-facebook" do %>
       <span class="fa fa-facebook"></span> Sign in with Facebook
    <% end %>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field form-group">
        <%= f.label :email, :class => "login-signup-label" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => "form-control" %>
      </div>

      <div class="field form-group">
        <%= f.label :password, :class => "login-signup-label" %><br />
        <%= f.password_field :password, autocomplete: "off", :class => "form-control" %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end -%>

      <div class="actions">
        <%= f.submit "Log in" %>
      </div>
    <% end %>

    <div class="login-signup-links">
      <div><%= link_to "Sign Up", new_user_registration_path %></div>
      <div><%= link_to "Forgot Your Password?", new_user_password_path %></div>
    </div>
    

  </div>
</div>
