  <h3 class="login-signup-header">Technical Questions and Answers.</h3>

  <div class="flash-container">
    <% if flash[:alert] && flash[:alert].include?("You need to sign in or sign up before continuing.") %>
      <% flash.now[:alert] = "You must be logged in to Ask a Question." %>
      <h4 class="flash-style"><%= flash.now[:alert] %></h4>
    <% elsif flash[:alert] %>
      <h4 class="flash-style"><%= flash.now[:alert] %></h4>
    <% end %>
  </div>

<div class="login-page">
  <div class="login-wrapper">

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field form-group">
        <%= f.label :email, :class => "login-signup-label" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => "form-control" %>
      </div>

      <div class="field form-group">
        <%= f.label :password, :class => "login-signup-label" %><br />
        <%= f.password_field :password, autocomplete: "off", :class => "form-control" %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end -%>

      <div class="actions">
        <%= f.submit "Log in" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>

  </div>
</div>
