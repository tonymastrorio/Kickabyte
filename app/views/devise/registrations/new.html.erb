<h3 class="login-signup-header">Create your free Kickabyte account in seconds.</h3>

<div class="login-page">
  <div class="login-wrapper">

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="field form-group">
        <%= f.label :display_name, :class => "login-signup-label" %><br />
        <%= f.text_field :display_name, autofocus: true, autocomplete: "off", :class => "form-control" %>
      </div>

      <div class="field form-group">
        <%= f.label :email, :class => "login-signup-label" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => "form-control" %>
      </div>

      <div class="field form-group">
        <%= f.label :password, :class => "login-signup-label" %>
        <% if @minimum_password_length %>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off", :class => "form-control" %>
      </div>

      <div class="field form-group">
        <%= f.label :password_confirmation, :class => "login-signup-label" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", :class => "form-control" %>
      </div>

      <div class="actions">
        <%= f.submit "Sign up" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>

  </div>
</div>
