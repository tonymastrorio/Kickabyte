var $upvotediv = $('div.answer[data-id="<%= @answer.id %>"]');

<% if current_user.liked? @answer %>
    $upvotediv.find('.like-btn').addClass('liked');   
<% else %>
    $upvotediv.find('.like-btn').removeClass('liked');
<% end %>

<% if current_user.disliked? @answer %>
    $upvotediv.find('.dislike-btn').addClass('liked');   
<% else %>
    $upvotediv.find('.dislike-btn').removeClass('liked');
<% end %>

var $answerdiv = $('div.answer[data-id="<%= @answer.id %>"]');
$answerdiv.find('.likes-count').html("<%= @answer.get_upvotes.size - @answer.get_downvotes.size %>");